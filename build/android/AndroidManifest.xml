<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.markhaskamp.pomodoro"
      android:versionCode="4"
      android:versionName="1.1"
>
	<uses-sdk android:minSdkVersion="3" />
	<application
    	android:icon="@drawable/appicon"
      	android:label="pomodoroAlaMark"
      	android:name="PomodoroalamarkApplication"
      	android:debuggable="true"
	>
    	<activity
        	android:name=".PomodoroalamarkActivity"
            android:label="pomodoroAlaMark"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
        	android:name="org.appcelerator.titanium.TitaniumActivity"
        	android:configChanges="keyboardHidden|orientation"
      	/>
    	<activity
    		android:name="org.appcelerator.titanium.TitaniumVideoActivity"
    		android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
    	/>
		<provider
			android:authorities="com.markhaskamp.pomodoro.titanium"
			android:name="org.appcelerator.titanium.TitaniumContentProvider"
		/>
		<service
			android:name="org.appcelerator.titanium.TitaniumAnalyticsService"
			android:exported="false"
		/>
	</application>
